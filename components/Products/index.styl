$color-white = #fff
$color-light = #7c7c7c
$color-dark = #3f3f3f
$color-red = #ff4136

.text
    color $color-dark

.redText
    color $color-red

.header
    +tablet()
        display flex
        flex-direction row
        justify-content space-between

.sort
    margin-top 2u
    display flex
    flex-direction row
    +tablet()
        margin-top 0
        margin-left 8u

.view
    margin-top 2u
    display flex
    flex-direction row
    +tablet()
        margin-top 0
        margin-left auto

.viewItem
    margin-left 4u

.viewItem.first
    margin-left 0

.viewIcon
    color $color-dark

.viewIcon.active
    color $color-red

.products.grid
    +tablet()
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content space-between

.product
    margin-top 8u
    position relative

.product.grid
    width 100%
    +tablet()
        width 49%
    +wide()
        width 24%

.product.list
    +tablet()
        display flex
        flex-direction row
        justify-content space-between

.productImg.grid
    width 100%
    height 42u
    +tablet()
        height 50u

.productImg.list
    width 100%
    height 40u
    +tablet()
        width 40%
        height 46u
    +wide()
        width 30%

.sale
    padding 1u
    position absolute
    top 3u
    left 3u
    text-transform uppercase
    font-weight 500
    color $color-white
    background-color $color-dark

.info
    margin-top 2u
    +tablet()
        margin-top 0

.info.grid
    display flex
    flex-direction row
    justify-content space-between

.info.list
    +tablet()
        width 56%
    +wide()
        width 68%

.infoRight
    width 75%

.productTitle
    font(xl)
    color $color-dark

.productTitle.grid
    font(m)
    text-transform uppercase

.productCategories
    margin-top 1u
    color $color-dark

.productPrice
    margin-top 2u
    font(l)
    color $color-light

.productDescription
    margin-top 2u
    color $color-light

.btns
    margin-top 2u
    display flex
    flex-direction row
    +wide()
        margin-top 5u

.btn
    margin-left 3u
    padding 1u
    border 1px solid $color-light

.btn.first
    margin-left 0

.btnText
    text-transform uppercase
    color $color-dark

.btnIcon
    color $color-dark