$color-light = #7c7c7c
$color-dark = #3f3f3f

$color-lightgray = #f5f5f5
$color-gray = #dedede

$color-red = #ff4136
$color-pink = #ff01f0
$color-blue = #3649ff
$color-sky = #00c0ff
$color-green = #00ffae
$color-purple = #8a00ff

.section
    margin-top 5u

.section.first
    margin-top 0

.sectionTitle
    font(l)
    font-weight 500
    color $color-dark

.search
    margin-top 4u
    display flex
    flex-direction row

.searchInput
    width 80%
    height 6u
    padding 0 2u
    background-color $color-lightgray
    outline none

.searchBtn
    width 6u
    height 6u
    display flex
    justify-content center
    align-items center
    background-color $color-gray

.searchIcon
    color $color-red

.categories
    margin-top 2u

.category
    margin-top 2u
    display flex
    flex-direction row
    justify-content space-between

.categoryTitle
    color $color-light

.categoryValue
    color $color-light

.colors
    margin-top 2u
    margin-left -3u
    display flex
    flex-direction row
    flex-wrap wrap

.color
    margin-top 2u
    width 3u
    height 3u
    margin-left 3u
    radius(circle)

.color.red
    background-color $color-red
.color.pink
    background-color $color-pink
.color.blue
    background-color $color-blue
.color.sky
    background-color $color-sky
.color.green
    background-color $color-green
.color.purple
    background-color $color-purple

.colorLink
    width 100%
    height 100%
    border-radius 1.5u

.sizes
    margin-top 4u
    margin-left -2u
    display flex
    flex-direction row

.size
    margin-left 2u
    color $color-light

.topProduct
    margin-left -3u
    margin-top 4u
    display flex
    flex-direction row
    flex-wrap wrap

.topProductImg
    width 11u
    height 11u
    margin-left 3u

.topProductInfo
    margin-left 3u

.topProductTitle
    color $color-light

.rating
    margin-top 1u
    display flex
    flex-direction row

.star
    width 2u
    height 2u
    margin-left 1u
    border 1px solid $color-dark

.star.first
    margin-left 0

.fillStar
    border $color-red
    background-color $color-red

.topProductPrice
    margin-top 1u
    color $color-light